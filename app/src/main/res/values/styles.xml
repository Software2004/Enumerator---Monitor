<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textBody">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="textBody_lw0dp" parent="textBody">
        <item name="android:layout_width">0dp</item>
    </style>


    <style name="textBody.Small" parent="textBody">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="textBody.VerySmall" parent="textBody">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="textBody.Large" parent="textBody">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textBody.VeryLarge" parent="textBody">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="textHeading" parent="textBody">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?android:textColor</item>
    </style>

    <style name="textHeading.medium" parent="textHeading">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textHeading.Small" parent="textHeading">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textHeading.NormalStyle" parent="textHeading.Small">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textHeading.NormalStyle.Large" parent="textHeading.Large">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textHeading.NormalStyle.medium" parent="textHeading.NormalStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textHeading.NormalStyle.VeryLarge" parent="textHeading.VeryLarge">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textHeading.NormalStyle.Small" parent="textHeading.NormalStyle">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="textHeading.NormalStyle.VerySmall" parent="textHeading.NormalStyle">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="textHeading.Large" parent="textHeading">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="textHeading.VeryLarge" parent="textHeading">
        <item name="android:textSize">24sp</item>
    </style>


    <style name="textHeading.VerySmall" parent="textHeading">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="btn_lwm" parent="Widget.Material3.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">58dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">?backgroundColor</item>
        <item name="backgroundTint">?colorPrimaryInverse</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:textSize">16sp</item>
        <item name="iconTint">?backgroundColor</item>
    </style>


    <style name="btn_lwm_enable_disable" parent="btn_lwm">
        <item name="backgroundTint">@color/button_bg</item>
    </style>

    <style name="btn_lwm.txtbtn" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingHorizontal">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="btn_lwm.outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">55dp</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="iconTint">?android:textColorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="textInputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">?backgroundColor</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxStrokeColor">@color/stroke_color_with_states</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">?colorPrimary</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="textInputLayout.NoHint" parent="textInputLayout">
        <item name="android:layout_width">match_parent</item>

        <item name="hintEnabled">false</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="expandedHintEnabled">false</item>
    </style>


    <style name="editTextInputLayout" parent="textBody">
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLength">80</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>

    </style>

    <style name="backBtn">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="contentPadding">5dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:src">@drawable/arrow_small_left</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>

    <style name="llSet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="FontTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">?fontFamily</item>
        <item name="fontFamily">?fontFamily</item>

    </style>

    <style name="FontTextAppearanceSelected" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">?fontFamily</item>
        <item name="fontFamily">?fontFamily</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="SettingsButton" parent="Theme.EnumeratorMonitor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:background">@drawable/selectable_bg_new</item>
        <!--        <item name="end">@drawable/angle_small_right_1_</item>-->
    </style>
    <!--        <item name="textColor">?android:textColor</item>-->


    <style name="linearProg">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:max">100</item>
        <item name="android:progressTint">@color/textColorSecondary</item>
        <item name="android:secondaryProgress">?colorPrimary</item>
        <item name="android:progress">0</item>
        <item name="trackColor">?colorTertiary</item>
        <item name="indicatorTrackGapSize">0dp</item>
        <item name="trackThickness">2dp</item>
        <item name="trackStopIndicatorSize">0dp</item>
        <item name="indicatorColor">?colorPrimary</item>
    </style>


    <style name="checkBoxStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:background">@drawable/outlined_12dp_round_with_states_effect</item>
    </style>


    <style name="constraintLay">
        <item name="android:id">@id/parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="selectableIcon" parent="backBtn" />


    <style name="roundMaterialCard">
        <item name="android:id">@id/parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">?cardBackgroundColor</item>
        <item name="android:pointerIcon">hand</item>
        <item name="cardCornerRadius">24dp</item>
    </style>


    <style name="horizontal_divider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:alpha">0.75</item>
        <item name="android:background">?colorButtonNormal</item>
    </style>


    <style name="error_text_appearance">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="circular_progress_indicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">gone</item>
        <item name="indicatorColor">?backgroundColor</item>
        <item name="indicatorSize">30dp</item>
        <item name="trackColor">?backgroundColor</item>
    </style>


    <style name="editTextOutlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="android:background">@drawable/outlined_12dp_round_with_states_effect</item>
        <item name="android:backgroundTint">?backgroundColor</item>
    </style>


    <style name="materialCard">
        <item name="android:id">@id/parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">?backgroundColor</item>
        <item name="android:pointerIcon">hand</item>


    </style>

    <style name="suppBtn" parent="@style/Widget.Material3.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">2.5dp</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="tabLayout" parent="@style/Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicator">@drawable/round_12dp_bg_white</item>
        <item name="tabIndicatorAnimationMode">fade</item>
        <item name="tabIndicatorColor">?cardBackgroundColor</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabSelectedTextColor">?colorPrimary</item>
        <item name="tabTextAppearance">@style/FontTextAppearance</item>
        <item name="tabTextColor">?colorSecondary</item>
        <item name="tabSelectedTextAppearance">@style/FontTextAppearance</item>
    </style>

    <style name="outlined_spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:background">@drawable/custom_spinner_background</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:popupBackground">@drawable/custom_spinner_background_with_padding</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>
</resources>
