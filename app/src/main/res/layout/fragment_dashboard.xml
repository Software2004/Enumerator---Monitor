<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragments.DashboardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Header: Avatar + Welcome + Name -->
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/full_round_bg"
            android:backgroundTint="@color/light_green"
            android:padding="8dp"
            android:src="@drawable/round_person_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?colorPrimary" />

        <TextView
            android:id="@+id/tvWelcome"
            style="@style/textBody.Small"
            android:layout_width="0dp"
            android:layout_marginStart="12dp"
            android:text="Welcome back,"
            app:layout_constraintEnd_toStartOf="@id/btnSettings"
            app:layout_constraintStart_toEndOf="@id/imgAvatar"
            app:layout_constraintTop_toTopOf="@id/imgAvatar" />

        <TextView
            android:id="@+id/tvUserName"
            style="@style/textHeading.medium"
            android:layout_width="0dp"
            android:layout_marginTop="4dp"
            android:text="Hammad Hanif"
            app:layout_constraintEnd_toStartOf="@id/btnSettings"
            app:layout_constraintStart_toStartOf="@id/tvWelcome"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btnSettings"
            style="@style/selectableIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:contentDescription="settings"
            android:src="@drawable/baseline_more_vert_24"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/imgAvatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgAvatar" />

        <!-- Total Entries Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTotalEntries"
            style="@style/roundMaterialCard"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="?colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgAvatar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="#55ffffff"
                        android:src="@drawable/round_storage_24"
                        app:contentPadding="6dp"
                        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
                        app:tint="@color/white" />

                    <TextView
                        style="@style/textBody.VeryLarge"
                        android:layout_marginStart="12dp"
                        android:text="Total Entries"
                        android:textColor="@color/white" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTotalEntries"
                    style="@style/textHeading.VeryLarge"
                    android:layout_marginTop="16dp"
                    android:text="1,250"
                    android:textColor="@color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Two small cards -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTodayEntries"
            style="@style/roundMaterialCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@id/cardAvgEntries"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardTotalEntries">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">


                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/full_round_bg"
                    android:backgroundTint="@color/light_green"
                    android:padding="6dp"
                    android:src="@drawable/round_today_24"
                    app:tint="?colorPrimary" />

                <TextView
                    style="@style/textBody"
                    android:layout_marginTop="8dp"
                    android:text="Today's Entries" />


                <TextView
                    android:id="@+id/tvTodayEntries"
                    style="@style/textHeading.Large"
                    android:layout_marginTop="8dp"
                    android:text="82" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAvgEntries"
            style="@style/roundMaterialCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cardTodayEntries"
            app:layout_constraintTop_toTopOf="@id/cardTodayEntries">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">


                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/full_round_bg"
                    android:backgroundTint="@color/light_green"
                    android:padding="6dp"
                    android:src="@drawable/round_bar_chart_24"
                    app:tint="?colorPrimary" />

                <TextView
                    style="@style/textBody"
                    android:layout_marginTop="8dp"
                    android:text="Avg Entries/Day" />


                <TextView
                    android:id="@+id/tvAvgEntries"
                    style="@style/textHeading.Large"
                    android:layout_marginTop="8dp"
                    android:text="75" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Recent Entries header -->
        <TextView
            android:id="@+id/tvRecentEntries"
            style="@style/textHeading.NormalStyle"
            android:layout_marginTop="24dp"
            android:text="Recent Entries"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardTodayEntries" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewAll"
            style="@style/btn_lwm.txtbtn"
            android:layout_height="42dp"
            android:text="View All"
            app:layout_constraintBaseline_toBaselineOf="@id/tvRecentEntries"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- RecyclerView for recent entries (design only) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecentEntries"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:overScrollMode="never"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvRecentEntries"
            tools:itemCount="3"
            tools:listitem="@layout/item_recent_entry" />

        <LinearLayout
            android:id="@+id/layResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvRecentEntries">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="12dp"
                android:src="@drawable/folder"
                app:tint="?colorSecondary" />

            <TextView
                style="@style/textHeading.medium"
                android:layout_marginTop="20dp"
                android:text="No Entries Yet" />

            <TextView
                style="@style/textBody"
                android:layout_marginTop="4dp"
                android:text="You haven't added any entries yet. Press the '+' button to add a new entry."
                android:textAlignment="center" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>