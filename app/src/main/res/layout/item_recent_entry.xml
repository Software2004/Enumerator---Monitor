<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/roundMaterialCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="14dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/full_round_bg"
            android:padding="12dp"
            android:src="@drawable/house_chimney_1_"
            app:tint="?colorPrimary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPersonName"
                style="@style/textHeading"
                android:text="Ali Khan" />

            <TextView
                android:id="@+id/tvMeta"
                style="@style/textBody"
                android:text="Lahore - Block 5 Â· 10:45 AM"
                android:textColor="@color/textColorSecondary" />
        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btnShare"
            style="@style/selectableIcon"
            app:contentPadding="10dp"
            android:layout_marginTop="0dp"
            android:contentDescription="share"
            android:src="@drawable/baseline_share_24" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>


