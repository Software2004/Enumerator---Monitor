<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activities.AllEntriesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivBack"
            style="@style/backBtn"
            android:layout_marginTop="0dp" />

        <TextView
            style="@style/textHeading"
            android:layout_marginStart="12dp"
            android:text="All Entries" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/textInputLayout.NoHint"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        app:endIconMode="clear_text"
        app:errorEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearch"
            style="@style/editTextInputLayout"
            android:drawableStart="@drawable/round_search_24"
            android:drawablePadding="12dp"
            android:hint="Search by name or house number..."
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEntries"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:layout_marginTop="8dp"
        android:layout_weight="1" />

</LinearLayout>


